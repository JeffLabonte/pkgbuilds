pkgname=ryzenadj
pkgver=0.5.2
pkgrel=1
pkgdesc="Adjust power management settings for Mobile Raven Ridge Ryzen Processors"
arch=('x86_64')
url="https://github.com/FlyGoat/RyzenAdj"
license=('LGPL3')
depends=('pciutils')
makedepends=('cmake')
conflicts=("$pkgname-git")
source=("$pkgname-$pkgver.tar.gz::https://github.com/FlyGoat/RyzenAdj/archive/v$pkgver.tar.gz")
sha256sums=('b78558e7af71e798d3a3f1a1c526be4e51eeb515dc2c563cbd8dd34805a528cf')

build() {
    cd "RyzenAdj-$pkgver"
    mkdir build && cd build
    cmake ..
    make
}

package() {
	cd "RyzenAdj-$pkgver"
    install -Dm755 "build/$pkgname" "$pkgdir/usr/bin/$pkgname"
}
