# Maintainer: Robert Stoffers <rstoffers@gmail.com>
pkgname=gamehub
_pkgname=GameHub
pkgver=0.11.6
_pkgtag=15-dev
pkgrel=15
pkgdesc="Games manager/downloader/library written in Vala that supports GOG, Steam and Humble Bundle"
arch=('x86_64')
url="https://github.com/tkashkin/GameHub"
license=('custom')
depends=('granite' 'gtk3' 'webkit2gtk' 'json-glib' 'libgee' 'libsoup' 'sqlite' 'gdk-pixbuf2' 'cairo' 'file-roller' 'libmanette')
optdepends=('lib32-json-glib')
makedepends=('meson' 'ninja' 'vala')
optdepends=('file-roller' 'innoextract' 'wine' 'dosbox')
conflicts=('gamehub-git')
source=("$_pkgname-$pkgver-$_pkgtag.tar.gz"::https://github.com/tkashkin/$_pkgname/archive/$pkgver-$_pkgtag.tar.gz)
md5sums=('8d0e374d51166a676191f336bfdd2595')

build() {
	cd "$_pkgname-$pkgver-$_pkgtag"
	meson build --prefix=/usr -Ddistro=arch
	cd build
	ninja
}

package() {
	cd "$_pkgname-$pkgver-$_pkgtag/build"
	DESTDIR=$pkgdir ninja install
	ln -s com.github.tkashkin.$pkgname $pkgdir/usr/bin/$pkgname
}
