pkgname=python-httpx
_name=${pkgname#python-}
pkgver=0.11.0
pkgrel=1
pkgdesc="A next generation HTTP client for Python."
arch=('any')
url="https://www.encode.io/httpx"
license=('BSD-3-Clause')
depends=('python-h2' 'python-h11' 'python-certifi' 'python-chardet' 'python-hstspreload'
         'python-idna' 'python-rfc3986' 'python-sniffio' 'python-brotlipy')
makedepends=('python-setuptools')
#checkdepends=('python-pytest' 'python-trustme' 'uvicorn')
source=("https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$pkgver.tar.gz")
sha256sums=('abc46081611a86270d92c8fcaaf148f1eb33510c92096075fac27288bea3a9b2')

build() {
	cd "$_name-$pkgver"
	python setup.py build
}

#check() {
#	cd "$_pkgname-$pkgver"
#	pytest
#}

package() {
	cd "$_name-$pkgver"
	python setup.py install --root="$pkgdir/" --optimize=1 --skip-build
}
