pkgname=mntray-bin
pkgver=0.1.3
pkgrel=1
pkgdesc="A Manjaro Linux announcements notification app"
arch=('x86_64')
url="https://github.com/moson-mo/mntray"
license=('MIT')
depends=('qt5-base')
provides=("${pkgname%-bin}")
conflicts=("${pkgname%-bin}")
options=(!strip)
source=("$url/releases/download/$pkgver/${pkgname%-bin}-linux-x64-v$pkgver.tar.gz"
        "https://raw.githubusercontent.com/moson-mo/${pkgname%-bin}/master/LICENSE.md"
        "https://raw.githubusercontent.com/moson-mo/${pkgname%-bin}/master/assets/images/${pkgname%-bin}.png"
        "https://raw.githubusercontent.com/moson-mo/${pkgname%-bin}/master/assets/${pkgname%-bin}.desktop"
        "https://raw.githubusercontent.com/moson-mo/${pkgname%-bin}/master/assets/images/${pkgname%-bin}-regular.png"
        "https://raw.githubusercontent.com/moson-mo/${pkgname%-bin}/master/assets/images/${pkgname%-bin}-news.png")
sha256sums=('317e4b2f0c19a5841be5720980d6b4fc9d8a774575baadeb632f8bb7803072df'
            '7464e5e1670895c267a2951820f166972dab35d6869d4fcf7c68668eccfdfeb6'
            '71f4f9824836ebab121efaad8cd5d14f7cfe2621798154c514cfa14e6eb3d349'
            '308bc2098d91312b3cb6c6f69cc85db98c60232f0d8a9b218a5db0f843945279'
            '3c1e53c93a01f7521a79d414d6dc85b408bc219220bd12734aac581308d9b66f'
            'ff313ad34e9e0f1485a819133c150451118547dc91acf503f31631f5dd7370ef')

package() {
	install -Dm755 "${pkgname%-bin}" "$pkgdir/usr/bin/${pkgname%-bin}"
	install -Dm644 LICENSE.md "$pkgdir/usr/share/licenses/LICENSE.md"
    install -Dm644 ${pkgname%-bin}.png "$pkgdir/usr/share/icons/hicolor/256x256/apps/${pkgname%-bin}.png"
    install -Dm644 ${pkgname%-bin}.desktop "$pkgdir/usr/share/applications/${pkgname%-bin}.desktop"
    install -Dm644 ${pkgname%-bin}-regular.png "$pkgdir/usr/share/icons/hicolor/64x64/status/${pkgname%-bin}-regular.png"
    install -Dm644 ${pkgname%-bin}-news.png "$pkgdir/usr/share/icons/hicolor/64x64/status/${pkgname%-bin}-news.png"
}
