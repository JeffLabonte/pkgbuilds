# Maintainer: Stefano Capitani <stefanoatmanjarodotorg>

pkgname=plane-icon-theme
pkgver=1.3
pkgrel=1
pkgdesc='A simple iconset, preferably used in Gnome. Love/Inkscape/Gnome.'
arch=('any')
url="https://github.com/wfpaisa/$pkgname"
license=('GPL')
source=("$url/raw/master/build/zip-variants/PlaneDarkGnomedark-$pkgver.zip"
		"$url/raw/master/build/zip-variants/PlaneGnome-$pkgver.zip"
		"$url/raw/master/build/zip-variants/PlaneGnomeManjaro-$pkgver.zip")
makedepends=('unzip')

sha256sums=('0a04d18beff7df0dc131e67d73fc4eca6383b0c896634c0c71f1e30c1368fa5a'
            '3586cde3dcb22c5ee0ec3c97aa40ec1326449aa75b4d657ed91a52b0a7a6b226'
            '42561652764a9d16a48375a699929cca0226f3c8f888a567430c321393151d73')

noextract=("PlaneDarkGnomedark-$pkgver.zip"
		   "PlaneGnome-$pkgver.zip"
		   "PlaneGnomeManjaro-$pkgver.zip")


package() {
	install -dm 755 $pkgdir/usr/share/icons
	unzip -q "PlaneDarkGnomedark-$pkgver.zip" -d "$pkgdir/usr/share/icons/Plane-Dark"
	unzip -q "PlaneGnome-$pkgver.zip" -d "$pkgdir/usr/share/icons/Plane"
	unzip -q "PlaneGnomeManjaro-$pkgver.zip" -d "$pkgdir/usr/share/icons/Plane-Manjaro"
}

