pkgname=etc-update
pkgver=2.3.82
pkgrel=1
pkgdesc="CLI to interactively merge .pacnew in /etc"
arch=('x86_64')
url="https://wiki.gentoo.org/wiki/Handbook:X86/Portage/Tools#etc-update"
license=('GPL')
makedepends=('git')
optdepends=('dialog: for menu mode'
            'colordiff: for colored diff output')
backup=("etc/$pkgname.conf")
source=("https://gitweb.gentoo.org/proj/portage.git/snapshot/portage-$pkgver.tar.gz")
sha256sums=('4376d85885d610ea45ed56105902aa7eab5eb48f7cde073b5ce16d41470a05e3')

package() {
	cd "portage-$pkgver"
	install -Dm755 "bin/$pkgname" -t "$pkgdir/usr/bin"
	install -Dm644 "cnf/$pkgname.conf" -t "$pkgdir/etc"
}
