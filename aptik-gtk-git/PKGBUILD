# Maintainer: Mark Wagie <yochanan.marqos@gmail.com>
pkgname=aptik-gtk-git
pkgver=18.5.2
pkgrel=1
pkgdesc="GTK Frontend for Aptik System Migration Utility"
arch=('i686' 'x86_64')
url="https://github.com/yochananmarqos/aptik-gtk"
license=('GPL3')
depends=('glib2' 'gtk3' 'libgee')
makedepends=('git' 'vala' 'vte3')
provides=(aptik-gtk)
source=("${pkgname}::git+https://github.com/yochananmarqos/aptik-gtk.git")
sha256sums=('SKIP')

build() {
	cd "$srcdir/${pkgname}"
	make all
}

package() {
	cd "$srcdir/${pkgname}"
	make DESTDIR="$pkgdir/" install
}
