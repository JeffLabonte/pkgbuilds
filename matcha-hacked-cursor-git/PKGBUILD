pkgname=matcha-hacked-cursor-git
pkgver=r15.2445b17
pkgrel=1
pkgdesc="Cursor theme forked from Breeze Hacked and based on Matcha color palette"
arch=('any')
url="https://gitlab.com/cscs/matcha-hacked-cursor"
license=('GPL')
makedepends=('git' 'bash' 'cmake' 'inkscape' 'libcanberra' 'xorg-xcursorgen')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=('git+https://gitlab.com/cscs/matcha-hacked-cursor.git')
sha256sums=('SKIP')

pkgver() {
	cd "$srcdir/${pkgname%-git}"
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd "$srcdir/${pkgname%-git}"
	make
}

package() {
	cd "$srcdir/${pkgname%-git}"
	make DESTDIR="$pkgdir/" install
}
