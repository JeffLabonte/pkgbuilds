pkgname=pyroton-wine-manager
pkgver=1.1
pkgrel=1
pkgdesc="Proton Wine Manager for managing proton wine prefixes"
arch=('any')
url="https://github.com/beef331/PyrotonWineManager"
license=('MIT')
depends=('winetricks' 'python-pyglet')
source=("$pkgname-$pkgver.tar.gz::https://github.com/beef331/PyrotonWineManager/archive/Release.tar.gz")
sha256sums=('b7c3a8751a71e70a819c48b3c6f0cf02ee1e731940d312d80d6020fea12262fb')

package() {
	cd "PyrotonWineManager-Release"
	install -Dm755 pyrotonwinemanager.py $pkgdir/usr/bin/$pkgname
	install -Dm644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
