# Maintainer: Mark Wagie <yochanan dot marqos at gmail dot com>
pkgname=wine-gw2-intel-amd
_pkgname=wine-gw2
pkgver=1.3
pkgrel=1
pkgdesc="Aims to provide an easy way to play Guild Wars 2 on Linux: Intel/AMD package"
arch=('i686' 'x86_64')
url="https://en-forum.guildwars2.com/discussion/31192/playing-guild-wars-2-on-linux-performance-optimizations-and-more"
license=('none')
conflicts=('wine-gw2-nvidia')
provides=('wine-gw2')
source=("$pkgname-$pkgver.tar.gz::https://drive.google.com/file/d/1mDwbNmZ_BhYmtwTuJ6rPfaT5JiueioA1"
        "http://s3.amazonaws.com/gw2cdn/client/branches/Gw2Setup-64.exe"
        "wine-gw2.desktop")
md5sums=('fd79878bcef37e1a6608c8c5c9586c4b'
         '66a58815053e092960c0b08c209e1a71'
         'a3f96b8fa9ceb3fede630c7d6bdbb3b1')

package() {
	mv "$srcdir/Gw2Setup-64.exe" "$srcdir/GW2/data/drive_c/GW2/GW2.exe"
    install -d "$pkgdir/opt/$_pkgname"
    cp -a "$srcdir/GW2/." "$pkgdir/opt/$_pkgname/."
    install -d "${pkgdir}/usr/share/applications"
    install "$srcdir/$_pkgname.desktop" "$pkgdir/usr/share/applications"
    mkdir -p "$pkgdir/usr/bin"
	ln -s "$pkgdir/opt/$_pkgname/bin/user_run" "$pkgdir/usr/bin/$_pkgname"
}
