pkgname=simplegtd
pkgver=0.0.12
pkgrel=1
pkgdesc="Manage your to-do list using the Getting Things Done system."
arch=('any')
url="https://pypi.org/project/simplegtd"
license=('GPL3')
depends=('gobject-introspection' 'gtk3' 'python-gobject' 'python-xdg')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${pkgname::1}/$pkgname/$pkgname-$pkgver.tar.gz")
sha256sums=('fdfe5fb0e1e7996362e3a0d4311197943956b9cc2564404c6a1710110bd9872f')

build() {
	cd "$pkgname-$pkgver"
	python setup.py build
}

package() {
	cd "$pkgname-$pkgver"
	python setup.py install --root="$pkgdir/" --optimize=1 --skip-build
}
