pkgname=python-public
_name=${pkgname#python-}
pkgver=2019.4.13
pkgrel=1
pkgdesc="replace '__all__' with '@public.add' decorator"
arch=('any')
url="https://github.com/andrewp-as-is/public.py"
license=('GPL')
depends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$pkgver.tar.gz")
sha256sums=('e1436a8a99693a9849dfe40b9158f3837b7c309c163b2d3f5b8e9fce23876db1')

build() {
	cd "$_name-$pkgver"
	python setup.py build
}

package() {
	cd "$_name-$pkgver"
	python setup.py install --root="$pkgdir" --optimize=1 --skip-build
}
