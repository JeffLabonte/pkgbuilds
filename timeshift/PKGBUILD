pkgname=timeshift
pkgver=19.08.1
pkgrel=1
pkgdesc="A system restore utility for Linux"
arch=('i686' 'x86_64')
url="https://github.com/teejee2008/timeshift"
license=('GPL')
depends=('gtk3' 'libsoup' 'desktop-file-utils' 'cron' 'rsync' 'libgee' 'vte3')
makedepends=('vala' 'diffutils' 'coreutils')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
install=$pkgname.install
sha256sums=('ab56331f97c1616b889e69adccedeca06f0150e964eea631b52c9bd399f77604')

build() {
	cd "$pkgname-$pkgver"
	make
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="${pkgdir}" install
	rm "$pkgdir/usr/bin/timeshift-uninstall"
}
