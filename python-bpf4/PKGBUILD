pkgname=python-bpf4
_name=${pkgname#python-}
pkgver=0.8.0
pkgrel=1
pkgdesc="Peace-wise interpolation and lazy evaluation in cython"
arch=('x86_64')
url="https://github.com/gesellkammer/bpf4"
license=('none')
depends=('python-matplotlib' 'python-scipy')
makedepends=('python-setuptools' 'cython')
source=("https://pypi.org/packages/source/${_name:0:1}/$_name/$_name-$pkgver.tar.gz")
sha256sums=('abba231e8672d97456096191c2fb077083d26ba97ee6b94bd24a8e1f6d64740a')

build() {
	cd "$_name-$pkgver"
	python setup.py build
}

package() {
	cd "$_name-$pkgver"
	python setup.py install --root="$pkgdir" --optimize=1 --skip-build
}
