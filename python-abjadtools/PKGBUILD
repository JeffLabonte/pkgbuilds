pkgname=python-abjadtools
_name=${pkgname#python-}
pkgver=0.1.4
pkgrel=1
pkgdesc="convert abjad objects to its music21 counterpart"
arch=('any')
url="https://github.com/gesellkammer/emlib"
license=('BSD')
depends=('python-abjad-ext-nauert-git' 'python-music21')
makedepends=('python-setuptools')
source=("https://pypi.org/packages/source/${_name:0:1}/$_name/$_name-$pkgver.tar.gz")
sha256sums=('c25652a9790c5e397f95e9bd2d684f4d90266b81efe6b106ceedd5a7bafff21b')

build() {
	cd "$_name-$pkgver"
	python setup.py build
}

package() {
	cd "$_name-$pkgver"
	python setup.py install --root="$pkgdir" --optimize=1 --skip-build
}
