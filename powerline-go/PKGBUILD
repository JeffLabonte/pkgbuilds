# http://aur.archlinux.org/packages/powerline-go
pkgname=powerline-go
pkgver=1.16.1
pkgrel=1
pkgdesc="A beautiful, useful and fast prompt for your shell"
arch=('x86_64')
url="https://github.com/justjanne/powerline-go"
license=('GPL3')
makedepends=('go-pie' 'git')
optdepends=('powerline-fonts')
source=("$pkgname-$pkgver.tar.gz::https://github.com/justjanne/$pkgname/archive/v$pkgver.tar.gz")
sha256sums=('3c9ba9265ae3c53eeb08cd0ee4324961f0a6b1f99cd0059318180796959bf5df')

build() {
	cd "$pkgname-$pkgver"
	go build \
    -trimpath \
    -ldflags "-extldflags ${LDFLAGS}" \
    .
}

package() {
	cd "$pkgname-$pkgver"
	install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}
