# PKGBUILD for the paper maia icon theme
# Maintainer: Vaibhav Singh <vaibhavlinux@bitbucket.org>

pkgname=paper-maia-icon-theme-git
pkgver=746.04115106
pkgrel=4
pkgdesc="Manjaro variation of Paper Icon Theme"
arch=('any')
url="https://bitbucket.org/vaibhavlinux/paper-maia-icon-theme-git"
license=('CC BY-SA 4.0')
depends=('gtk-update-icon-cache'
         'paper-icon-theme-git')
# install=$pkgname.install
_commit=4d753f51a2d5
_initialdir=vaibhavlinux-$pkgname-$_commit
source=("$pkgname-$_commit.tar.gz::$url/get/$_commit.tar.gz")
sha256sums=('SKIP')

package() {
install -d "${pkgdir}/usr/share/icons"
cp -r "${srcdir}/$_initialdir/Paper-Maia" "${pkgdir}/usr/share/icons/"
cp -r "${srcdir}/$_initialdir/Paper-Maia-Mono-Dark" "${pkgdir}/usr/share/icons/"

src="/usr/share/icons/Paper-Mono-Dark"
ln -s "$src/22x22" "${pkgdir}/usr/share/icons/Paper-Maia-Mono-Dark"
ln -s "$src/24x24" "${pkgdir}/usr/share/icons/Paper-Maia-Mono-Dark"
}
