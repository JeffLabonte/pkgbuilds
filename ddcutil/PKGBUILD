# http://aur.archlinux.org/packages/ddcutil
pkgname=ddcutil
pkgver=0.9.8
pkgrel=1
pkgdesc='Query and change Linux monitor settings using DDC/CI and USB.'
arch=('x86_64')
url="http://ddcutil.com"
license=('GPL2')
depends=('glib2' 'libusb' 'udev' 'libdrm' 'libxrandr')
provides=('libddcutil.so=2-64')
source=("$pkgname-$pkgver.tar.gz::https://github.com/rockowitz/ddcutil/archive/v$pkgver.tar.gz")
sha256sums=('445478a226d3fc46c6c058e503bba416948dad1152736b3c91326e60bbfc9025')

build() {
	cd "$pkgname-$pkgver"
	./autogen.sh
	./configure --prefix=/usr
	make
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
