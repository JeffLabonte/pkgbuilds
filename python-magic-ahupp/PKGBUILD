# https://aur.archlinux.org/packages/python-magic-ahupp
groups=('modified')

pkgname=python-magic-ahupp
_name=python-magic
pkgdesc="A Python wrapper for libmagic"
pkgver=0.4.21
pkgrel=1
arch=('any')
url="https://github.com/ahupp/python-magic"
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
provides=('python-magic')
conflicts=('python-magic')
source=("https://pypi.org/packages/source/${_name:0:1}/$_name/$_name-$pkgver.tar.gz")
sha256sums=('2fe26b15ed59118ac117caba4e64d10966298d3dca15a4802fdfc3da4c25184a')

build() {
	cd "$_name-$pkgver"
	python setup.py build
}

package() {
	cd "$_name-$pkgver"
	export PYTHONHASHSEED=0
	python setup.py install --root="$pkgdir" --optimize=1 --skip-build

	install -Dm644 LICENSE -t "$pkgdir/usr/share/licenses/$pkgname"
}
