# http://aur.archlinux.org/packages/topgrade
pkgname=topgrade
pkgver=4.3.1
pkgrel=1
pkgdesc='Invoke the upgrade proceadure of multiple package managers'
arch=('x86_64' 'aarch64' 'armv7')
url='https://github.com/r-darwish/topgrade'
license=('GPL3')
makedepends=('rust')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha256sums=('549b2fe1b807256ec42a16fe5507b115fcd9c75a59a17de46dc3151ae28a1337')

build() {
	cd "$pkgname-$pkgver"
	cargo build --release --locked --all-features
}

check() {
	cd "$pkgname-$pkgver"
	cargo test --release --locked
}

package() {
	cd "$pkgname-$pkgver"
	install -Dm755 "target/release/$pkgname" -t "$pkgdir/usr/bin"
	install -Dm644 "$pkgname.8" -t "$pkgdir/usr/share/man/man8"
	install -Dm644 config.example.toml -t "$pkgdir/usr/share/doc/examples"
}
