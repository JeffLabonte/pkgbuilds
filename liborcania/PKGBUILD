# https://aur.archlinux.org/packages/liborcania
pkgname=liborcania
_gitname=orcania
pkgver=2.1.1
pkgrel=1
pkgdesc="Potluck with different functions for different purposes that can be shared among C programs"
arch=('x86_64')
url="https://babelouest.github.io/orcania"
license=('LGPL2.1')
depends=('jansson')
makedepends=('git' 'cmake')
provides=('liborcania.so=2.1')
source=("$_gitname-$pkgver.tar.gz::https://github.com/babelouest/orcania/archive/v$pkgver.tar.gz")
sha256sums=('960074f6aa198e9db5440347d20cff8be3b82ee1c15ac7b23c0ac54a301a85cd')

build() {
	cmake -B build -S "$_gitname-$pkgver" \
		-G "Unix Makefiles" \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		 -Wno-dev
	make -C build
}

package() {
	make -C build DESTDIR="$pkgdir" install
}
