# https://aur.archlinux.org/packages/finetune
pkgname=finetune
pkgver=2.0.1
pkgrel=1
pkgdesc="Audio tagger, fix song information, cover art, lyrics, remove duplicate and missing tracks from your library".
arch=('x86_64')
url="https://flavio.tordini.org/finetune"
license=('custom')
depends=('taglib' 'qt5-base' 'appmenu-gtk-module' 'chromaprint')
source=("$pkgname-$pkgver.deb::https://flavio.tordini.org/files/$pkgname/$pkgname.deb")
sha256sums=('73c2114fb83b3163fb3df49034bae00d0c64afc26c208565b741683ca2baa7a6')

package() {
	bsdtar -xvf data.tar.xz -C "$pkgdir"

	install -Dm644 "$pkgdir/usr/share/doc/finetune/copyright" -t \
		"$pkgdir/usr/share/licenses/$pkgname"
}
