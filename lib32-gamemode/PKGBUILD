pkgname=lib32-gamemode
_pkgname=${pkgname#lib32-}
pkgver=1.5.1
pkgrel=1
pkgdesc="Optimise Linux system performance on demand"
arch=('x86_64')
url="https://github.com/FeralInteractive/gamemode"
license=('BSD 3-Clause')
depends=('polkit' 'gamemode' 'lib32-glibc' 'lib32-systemd' 'lib32-dbus')
makedepends=('git' 'meson')
source=("$url/releases/download/$pkgver/$_pkgname-$pkgver.tar.xz")
sha256sums=('fa23d9d80ae07dcab3db4e63e6f7a3eda70355bb8fdd419c463bed4d2e02c616')

build() {
	export CFLAGS=-m32
	export CXXFLAGS=-m32
	export PKG_CONFIG_PATH='/usr/lib32/pkgconfig'

	arch-meson "$_pkgname-$pkgver" build  \
		--libdir lib32 \
		-Dwith-daemon=false \
		-Dwith-examples=false \
		-Dwith-systemd=false \
		-Dwith-util=false
	ninja -C build
}

package() {
	DESTDIR="$pkgdir" ninja -C build install

	rm -rf "$pkgdir/usr/include"

	cd "$_pkgname-$pkgver"
	install -Dm644 LICENSE.txt -t "$pkgdir/usr/share/licenses/$pkgname"
}
