# Maintainer: Mark Wagie <yochanan dot marqos at gmail dot com>
pkgname=ocs-store
pkgver=4.1.1
pkgrel=1
pkgdesc="Store Frontend and Management Application based on OpenCollaborationServices (OCS) of Opendesktop.org."
arch=('x86_64')
url="https://www.opencode.net/akiraohgaki/ocs-store"
license=('GPL3')
depends=('gconf' 'libcanberra' 'libgnome-keyring' 'libxss' 'ocs-manager')
makedepends=('npm')
conflicts=('ocsstore')
source=("$pkgname-$pkgver.tar.gz::https://www.opencode.net/akiraohgaki/$pkgname/-/archive/release-$pkgver/$pkgname-release-$pkgver.tar.gz")
sha256sums=('c0db6e94ac1eb931de38d6f64928ed071655a9d8f26e0f533cc9e2d4d239deaf')

build() {
    cd "$pkgname-release-$pkgver"
    make
}

package() {
    cd "$pkgname-release-$pkgver"
    make prefix=/usr DESTDIR="$pkgdir/" install
}
